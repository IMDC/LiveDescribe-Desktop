<UserControl
    x:Class="LiveDescribe.Controls.MediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="338"
    d:DesignWidth="550"
    xmlns:controls="clr-namespace:LiveDescribe.Controls"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:converters="clr-namespace:LiveDescribe.Converters">

    <UserControl.Resources>
        <Style
            x:Key="ControlPanelStyle"
            TargetType="Control">
            <Setter
                Property="Margin"
                Value="12,10,10,10" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="50" />
        </Grid.RowDefinitions>
        <Border
            Background="Black"
            Grid.Row="0">
            <controls:LiveDescribeMediaPlayer
                ScrubbingEnabled="True"
                x:Name="VideoMedia"
                Source="{Binding Path}"
                LoadedBehavior="Manual">
                <i:Interaction.Triggers>
                    <i:EventTrigger
                        EventName="MediaOpened">
                        <i:InvokeCommandAction
                            Command="{Binding VideoOpenedCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger
                        EventName="MediaFailed">
                        <i:InvokeCommandAction
                            Command="{Binding MediaFailedCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger
                        EventName="MediaEnded">
                        <i:InvokeCommandAction
                            Command="{Binding MediaEndedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </controls:LiveDescribeMediaPlayer>
        </Border>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1">
            <StackPanel.Resources>
                <converters:TimeConverterFormatter
                    x:Key="TimeConverterFormatter" />
            </StackPanel.Resources>
            <Button
                Style="{StaticResource ControlPanelStyle}"
                Command="{Binding MuteCommand}"
                Content="Mute"
                HorizontalAlignment="Center" />

            <Slider
                Value="{Binding Path=Volume, ElementName=VideoMedia}"
                Name="VolumeControl"
                Maximum="1"
                Minimum="0"
                Style="{StaticResource ControlPanelStyle}"
                Width="100"
                Margin="10,15,10,10" />

            <RepeatButton
                Command="{Binding RewindCommand}"
                Style="{StaticResource ControlPanelStyle}"
                Content="Rewind"
                HorizontalAlignment="Center" />

            <Button
                Name="PlayControl"
                Style="{StaticResource ControlPanelStyle}"
                Command="{Binding PlayCommand}"
                Content="Play"
                HorizontalAlignment="Center" />

            <Button
                Name="PauseControl"
                Style="{StaticResource ControlPanelStyle}"
                Command="{Binding PauseCommand}"
                Content="Pause"
                HorizontalAlignment="Center" />

            <RepeatButton
                Command="{Binding FastForwardCommand}"
                Style="{StaticResource ControlPanelStyle}"
                Content="Fast Forward"
                HorizontalAlignment="Center" />

            <TextBlock
                Text="{Binding Path=PositionTimeLabel,
                Converter={StaticResource TimeConverterFormatter},
                Mode=OneWay}"
                x:Name="CurrentTimeLabel"
                MinWidth="40"
                Margin="0,15,0,10"
                FontSize="16"
                FontFamily="Trebuchet MS"
                Width="95" />
        </StackPanel>

    </Grid>
</UserControl>
