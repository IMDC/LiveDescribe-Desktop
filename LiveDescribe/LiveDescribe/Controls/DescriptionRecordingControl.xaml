<UserControl
    x:Class="LiveDescribe.Controls.DescriptionRecordingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:converters="clr-namespace:LiveDescribe.Converters">

    <UserControl.Resources>
        <Style
            x:Key="ControlPanelStyle"
            TargetType="Control">
            <Setter
                Property="Margin"
                Value="5" />
        </Style>
        <converters:BoolToRecordingContentConverter
            x:Key="BoolToRecordingContentConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <CheckBox
                IsChecked="{Binding ExtendedIsChecked}"
                Style="{StaticResource ControlPanelStyle}"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Record Extended Description"
                    TextWrapping="Wrap" />
            </CheckBox>

            <Button
                Command="{Binding RecordCommand}"
                Style="{StaticResource ControlPanelStyle}"
                Content="{Binding Path=IsRecording,
                Converter={StaticResource BoolToRecordingContentConverter}}"
                HorizontalAlignment="Center"
                Width="100"
                MinHeight="20" />
        </StackPanel>
    </Grid>
</UserControl>
