<Window x:Class="LiveDescribe.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1280" MinHeight="800" MinWidth="1280">


    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch"  Grid.ColumnSpan="3"  >
            <MenuItem Header="File">
            </MenuItem>
        </Menu>
        
        <Grid DockPanel.Dock="Bottom"  Background="White">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Background="Black" Grid.Row="0" Grid.RowSpan="7" Grid.ColumnSpan="4">
                <MediaElement Source="C:\Users\Public\Videos\Sample Videos\Wildlife.wmv"/>
            </Border>

            <StackPanel  Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="1">
                <Button Margin="11" Height="30">Record</Button>
                <Button Margin="11" Height="30">Rewind</Button>
                <Button Margin="11" Height="30">Play</Button>
                <Button Margin="11" Height="30">Pause</Button>
                <Button Margin="11" Height="30">Fast Forward</Button>
            </StackPanel>
            
            <TabControl Grid.Column="4" Grid.RowSpan="6" Grid.ColumnSpan="2">
                <TabItem Header="Spaces">
                </TabItem>
                <TabItem Header="Descriptions">        
                </TabItem>
                <TabItem Header="Extended Descriptions">
                </TabItem>
            </TabControl>
            
            <Border BorderBrush="Black" Grid.ColumnSpan="6"  Grid.Row="8" Grid.RowSpan="5" BorderThickness="2"  VerticalAlignment="Stretch">
                <ScrollViewer   HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="6"  Grid.Row="8" Grid.RowSpan="5">
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
        </Grid>

    </DockPanel>
</Window>
