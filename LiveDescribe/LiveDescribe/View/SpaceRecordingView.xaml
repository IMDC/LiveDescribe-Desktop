<Window
    x:Class="LiveDescribe.View.SpaceRecordingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LiveDescribe.Converters"
    Title="SpaceRecordingView"
    Height="400"
    Width="400">
    <Window.Resources>
        <converters:MillisecondsToTimeLeftStringConverter
            x:Key="MillisecondsToTimeLeftStringConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="SpaceTextBox"
            TextWrapping="Wrap"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            IsInactiveSelectionHighlightEnabled="True"
            SelectionOpacity="0.5"
            SelectionBrush="Blue"
            Text="{Binding Text}"
            LostFocus="SpaceTextBox_OnLostFocus"/>

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="28"
            Text="{Binding Path=TimeLeft, Converter={StaticResource MillisecondsToTimeLeftStringConverter}}"
            Margin="13,0,12,0" />

        <ProgressBar
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Minimum="0"
            Maximum="{Binding Space.Duration}"
            Value="{Binding ElapsedTime}"/>

        <Button
            Grid.Row="6"
            Content="Play"
            Command="{Binding PlayRecordedDescription}" />

        <Button
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Content="Record"
            Command="{Binding RecordDescription}" />

        <Button
            Grid.Row="6"
            Grid.Column="4"
            Content="Save"
            Command="{Binding SaveDescription}" />
    </Grid>
</Window>
