<Window
    x:Class="LiveDescribe.View.SpaceRecordingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SpaceRecordingView"
    Height="300"
    Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Text="{Binding Text}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Center"
            FontSize="28"
            Text="Time Left: 00:00:00.00"
            Margin="13,0,12,0" />

        <ProgressBar
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Minimum="0"
            Maximum="{Binding Space.Duration}"
            Value="{Binding ElapsedTime}"/>

        <Button
            Grid.Row="6"
            Content="Play"
            Command="{Binding PlayRecordedDescription}" />

        <Button
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Content="Record"
            Command="{Binding RecordDescription}" />

        <Button
            Grid.Row="6"
            Grid.Column="4"
            Content="Save"
            Command="{Binding SaveDescription}" />
    </Grid>
</Window>
